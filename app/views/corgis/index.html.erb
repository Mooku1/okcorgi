<p id="notice"><%= notice %></p>

<div class="jumbotron">
<h1>Listing Corgis</h1>
<p>Hello <%= current_user.email %>!</p>
</div>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Age</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @corgis.each do |corgi| %>
      <tr>
        <td><%= link_to(image_tag(corgi.filename, class: "image" ), corgi) %></td>
        <td><%= corgi.name %></td>
        <td><%= corgi.age %></td>
        <td><%= corgi.user.email %></td>
        <td class="actions btn btn-primary"><%= link_to 'Show', corgi %></td>
        <td class="actions btn btn-success"><%= link_to 'Edit', edit_corgi_path(corgi) %></td>
        <td class="actions btn btn-danger"><%= link_to 'Destroy', corgi, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Corgi', new_corgi_path %>
<%= link_to 'Log Out', destroy_user_session_path, method: :delete %>
